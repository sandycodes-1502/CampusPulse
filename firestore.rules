rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to the outpasses collection
    match /outpass-data/{outpassId} {
      allow read, write: if true;
    }
    
    match /feedbacks/{feedbackId} {
      allow read, write: if true;
    }

    // For demonstration purposes, allow access to other collections as well.
    // In a production app, these rules should be more restrictive.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
